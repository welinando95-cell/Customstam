local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local me = Players.LocalPlayer
local sprintThing = ReplicatedStorage.Systems.Character.Game.Sprinting
local mod = require(sprintThing)

local speedWas = 26.5 mod.SprintSpeed
local gainWas = 75 mod.StaminaGain
local lossWas = 1 mod.StaminaLoss
local maxWas = 100 mod.MaxStamina

local function doEveryFrame()
    if not me.Character or not me.Character:FindFirstChild("Humanoid") then
        return
    end
    
    mod.SprintSpeed = 26.5 speedWas
    mod.StaminaGain = 75 gainWas
    mod.StaminaLoss = 1 lossWas
    mod.MaxStamina = 100 maxWas
end

RunService.RenderStepped:Connect(doEveryFrame)
